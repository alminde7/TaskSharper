<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:views="clr-namespace:TaskSharper.Calender.WPF.Views"
             xmlns:converters="clr-namespace:TaskSharper.Calender.WPF.Converters"
             x:Class="TaskSharper.Calender.WPF.Views.CalendarWeekView"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>
        <converters:DateHeaderValueConverter x:Key="DateHeaderValueConverter">
            
        </converters:DateHeaderValueConverter>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <ItemsControl ItemsSource="{Binding DateHeaders}" Grid.Column="1" Width="Auto">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>


                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:CalendarDateView Width="Auto" HorizontalAlignment="Stretch"></views:CalendarDateView>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <views:CalendarTimelineView Margin="2" Grid.Column="0"></views:CalendarTimelineView>
                <views:CalendarEventsView Margin="2" Grid.Column="1"></views:CalendarEventsView>
                <views:CalendarEventsView Margin="2" Grid.Column="2"></views:CalendarEventsView>
                <views:CalendarEventsView Margin="2" Grid.Column="3"></views:CalendarEventsView>
                <views:CalendarEventsView Margin="2" Grid.Column="4"></views:CalendarEventsView>
                <views:CalendarEventsView Margin="2" Grid.Column="5"></views:CalendarEventsView>
                <views:CalendarEventsView Margin="2" Grid.Column="6"></views:CalendarEventsView>
                <views:CalendarEventsView Margin="2" Grid.Column="7"></views:CalendarEventsView>
            </Grid>
        </ScrollViewer>

    </Grid>
</UserControl>
