<UserControl x:Class="TaskSharper.Calender.WPF.Views.CalendarDayEventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:TaskSharper.Calender.WPF.Properties"
             xmlns:converters="clr-namespace:TaskSharper.Calender.WPF.Converters"
             xmlns:local="clr-namespace:TaskSharper.Calender.WPF.Views.MonthViews"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="100">
    <Grid>
        <Grid Height="{Binding Source={x:Static p:Settings.Default}, Path=CalendarEvent_Height}">
            <Label Content="{Binding Event.Title}"/>
        </Grid>
    </Grid>
</UserControl>
