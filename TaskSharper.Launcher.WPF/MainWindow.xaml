<Window x:Class="TaskSharper.Launcher.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskSharper.Launcher.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <UniformGrid Grid.Row="1" Rows="1" Margin="20">
            <Button Margin="5" Content="Calendar" Click="OnCalendarClick"/>
            <Button Margin="5" Content="Appointments" Click="OnAppointmentsClick"/>
            <Button Margin="5" Content="Tasks" Click="OnTasksClick"/>
        </UniformGrid>
    </Grid>
</Window>
